{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "removeComments": true,  // 删除注释
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve", // 不让jsx转化
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue","/*.ts","/*.d.ts","auto-imports.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
